        <TextBlock FontSize="30"
           Margin="0,20"
           Text="{Binding Name}"/>

        <TextBox x:Name="txtName" 
         FontSize="30"
         Margin="0,20"
         Text="{Binding Name,
                        Mode=TwoWay,
                        UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox x:Name="txtAge" 
                 FontSize="30"
                 Margin="0,20"
                 Text="{Binding Age,
                                Mode=TwoWay,
                                UpdateSourceTrigger=PropertyChanged}"/>
        
        <Button Content="Change TextBox" 
                FontSize="30" 
                Click="Button_Click"/>
    </StackPanel>
